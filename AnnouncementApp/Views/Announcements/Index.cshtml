@model IEnumerable<AnnouncementApp.Models.Announcement>

@{
    ViewData["Title"] = "List of Announcements";
}

<div class="container">
    <div class="row mt-4">
        <div class="col-12 text-left">
            <a asp-controller="Announcements" asp-action="Create" class="btn btn-success">Create New</a>
        </div>
    </div>

    <div class="row mt-4">
        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card" style="width: 18rem;">
                    <img src="@item.PictureURL" class="card-img-top" alt="@item.Title">
                    <div class="card-body">
                        <h5 class="card-title">@item.Title</h5>
                        <a href="@Url.Action("Details", "Announcements", new { id = item.Id })" class="btn btn-primary">Show Details</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
