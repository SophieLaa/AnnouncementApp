@model AnnouncementApp.Models.Announcement

@{
    ViewData["Title"] = "Delete Announcement";
}

<div class="container">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <h2>Delete Announcement</h2>
            @if (Model != null)
            {
                <h3>Are you sure you want to delete this announcement?</h3>
                <div>
                    <h4>@Model.Title</h4>
                    <p>@Model.Description</p>
                    <p>Phone Number: @Model.PhoneNumber</p>
                </div>
                <form asp-controller="Announcements" asp-action="DeleteConfirmed" method="post">
                    <input type="hidden" asp-for="Id" />
                    <button type="submit" class="btn btn-danger">Delete</button>
                    <a href="@Url.Action("Index", "Announcements")" class="btn btn-secondary">Back to List</a>
                </form>
            }
            else
            {
                <p>Error: Announcement not found.</p>
            }
        </div>
    </div>
</div>
